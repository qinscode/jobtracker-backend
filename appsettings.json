{
  "ConnectionStrings": {
    "DefaultConnection": "Host=#{DB_HOST};Database=#{DB_DATABASE};Port=#{DB_PORT};Username=#{DB_USERNAME};Password=#{DB_PASSWORD}"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Jwt": {
    "Key": "#{JWT_SECRET}",
    "Issuer": "#{JWT_ISSUER}",
    "Audience": "#{JWT_AUDIENCE}"
  },
  "Authentication": {
    "Google": {
      "ClientId": "#{GOOGLE_CLIENT_ID}",
      "ClientSecret": "#{GOOGLE_SECRET}"
    }
  },
  "Gemini": {
    "ApiKey": "#{GEMINI_API_KEY}",
    "ApiEndpoint": "#{GEMINI_API_ENDPOINT}"
  },
  "EmailMonitoring": {
    "IntervalMinutes": 15
  },
  "AllowedHosts": "*",
  "EnableSwagger": false
}